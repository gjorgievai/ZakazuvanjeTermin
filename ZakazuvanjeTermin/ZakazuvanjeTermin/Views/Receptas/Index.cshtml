@model IEnumerable<ZakazuvanjeTermin.Models.Recepta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Креирај нова рецепта", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.miligrami)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dozvolenaDoza)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.miligrami)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dozvolenaDoza)
        </td>
        <td>
            @if (User.IsInRole("Doctor"))
            {
            @Html.ActionLink("Измени", "Edit", new { id = item.Id }) }
            
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) 
            @if (User.IsInRole("Doctor")) {
            @Html.ActionLink("Избриши", "Delete", new { id = item.Id })}
        </td>
    </tr>
}

</table>
